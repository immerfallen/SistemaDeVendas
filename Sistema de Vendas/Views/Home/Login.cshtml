@model LoginModel

@{
    Layout = "../Shared/_LayoutLogin.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />




<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Sistema de Vendas</h2>
        @{ try
            {
                var erro = TempData["ErroLogin"].ToString();
                <div class="text-center h6">
                    <span class="text-danger ">@erro</span>
                </div>
            }
            catch
            {

            }
        }

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <span class="fa fa-user"></span>
                    </span>
                </div>
                <input type="text" class="form-control" asp-for="Email" placeholder="Usuário">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
                <input type="password" class="form-control" asp-for="Senha" maxlength="10" placeholder="Senha">
            </div>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <button type="submit" class="btn btn-primary login-btn btn-block">Entrar</button>
        </div>

        <div class="clearfix">
            <label class="float-left form-check-label"><input type="checkbox" class="mr-1">Mantenha-me conectado</label>
            <a href="#" class="float-right">Esqueceu a senha?</a>
        </div>
    </form>
    <p class="text-center small"style="color:white;">Não tem cadastro? <a href="#">Cadastre-se aqui!</a></p>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

