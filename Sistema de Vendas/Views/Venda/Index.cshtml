<h2>Listagem de Vendas</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>            
            <th>Id</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in (List<VendaModel>)ViewBag.ListaVendas)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Data</td>
                    <td>@item.VendedorId</td>
                    <td>@item.ClienteId</td>
                    <td>@item.Total</td>
                </tr>
            }
        }
    </tbody>
</table>

<button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">Registrar Vendas</button>

<script>
    function Cadastrar() {
        window.location.href="../Venda/Registrar"
    }
    
</script>